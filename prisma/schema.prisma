generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  posts    Post[]
  comments Comment[]
}

model Post {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?
  createdAt DateTime @default(now())

  comments Comment[]
  authorId String
  author   User      @relation(fields: [authorId], references: [id])
}

model Comment {
  id          String   @id @default(uuid())
  authorId    String
  postId      String
  comment     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  postOwner   Post     @relation(fields: [postId], references: [id])
  authorOwner User     @relation(fields: [authorId], references: [id])
}
