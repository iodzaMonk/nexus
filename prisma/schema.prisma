generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  username     String    @unique
  name         String?
  password     String
  profileImage String?
  posts        Post[]
  comments     Comment[]
  likes        Like[]
  following    Follows[] @relation("following")
  followers    Follows[] @relation("followers")
}

model Follows {
  id          String @id @default(uuid())
  followerId  String
  followingId String
  following   User   @relation("following", fields: [followingId], references: [id])
  followers   User   @relation("followers", fields: [followerId], references: [id])

  @@unique([followerId, followingId])
}

model Like {
  id     String @id @default(uuid())
  userId String
  postId String

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}

model Post {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?
  createdAt DateTime @default(now())

  comments Comment[]
  likes    Like[]
  authorId String
  author   User      @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Comment {
  id          String   @id @default(uuid())
  authorId    String
  postId      String
  comment     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  postOwner   Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorOwner User     @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
